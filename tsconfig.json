{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom",
      "es2016",
      "es2017"
    ],
    "outDir": "./bin/",
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}